<div class="container mt-3">
  <h1><%= @restaurant.name.capitalize %></h1>
  <p>Address: <%= @restaurant.address %></p>
  <p>Category: <%= @restaurant.category %></p>
  <p>Phone: <%= @restaurant.phone_number %></p>
<%= link_to 'back to all restaurants', restaurants_path, class: 'btn btn-primary' %>
<%= link_to 'add a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
  <h4 class="mt-3">Reviews</h4 class="mt-3">
  <ul>
    <p><% @restaurant.reviews.each do |review| %></p>
      <li><%= review.content %></li>
    <% end %>
  </ul>
</div>

